{
  "ReverseProxy": {
    "Routes": {
      // Identity Service Routes
      "identity-login": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/auth/login"
        }
      },
      "identity-register": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/auth/register"
        }
      },

      // Catalog Service Routes
      "catalog-products": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/api/catalog/products/{**remainder}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/catalog"
          }
        ]
      },
      "catalog-categories": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/api/catalog/categories/{**remainder}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/catalog"
          }
        ]
      },

      // Basket Service Routes
      "basket-all": {
        "ClusterId": "basket-cluster",
        "Match": {
          "Path": "/api/basket/{**remainder}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      },

      // Order Service Routes
      "order-all": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/api/orders/{**remainder}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7262"
          }
        }
      },
      "catalog-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7029"
          }
        }
      },
      "basket-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7045"
          }
        }
      },
      "order-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5003"
          }
        }
      }
    }
  },

  "Jwt": {
    "Secret": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "ECommerceIdentityService",
    "Audience": "ECommerceClients"
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Yarp": "Information"
      }
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*"
}
